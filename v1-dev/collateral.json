{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Collateral Schema",
  "description": "Data schema to define collateral (currently can reference loans or accounts).",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "date": {
      "description": "YYYY-MM-DDTHH:MM:SSZ in accordance with ISO 8601",
      "type": "string",
      "format": "date-time"
    },
    "loan_ids": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "account_ids": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "charge": {
      "description": "Lender charge on collateral, 1 indicates first charge, 2 second and so on. 0 indicates a combination of charge levels.",
      "type": "integer",
      "minimum": 0
    },    
    "currency_code": {
      "type": "string",
      "enum": [
        "AED", "AFN", "ALL", "AMD", "ANG", "AOA", "ARS", "AUD", "AWG", "AZN",
        "BAM", "BBD", "BDT", "BGN", "BHD", "BIF", "BMD", "BND", "BOB", "BOV",
        "BRL", "BSD", "BTN", "BWP", "BYR", "BZD", "CAD", "CDF", "CHE", "CHF",
        "CHW", "CLF", "CLP", "CNY", "COP", "COU", "CRC", "CUC", "CUP", "CVE",
        "CZK", "DJF", "DKK", "DOP", "DZD", "EGP", "ERN", "ETB", "EUR", "FJD",
        "FKP", "GBP", "GEL", "GHS", "GIP", "GMD", "GNF", "GTQ", "GYD", "HKD",
        "HNL", "HRK", "HTG", "HUF", "IDR", "ILS", "INR", "IQD", "IRR", "ISK",
        "JMD", "JOD", "JPY", "KES", "KGS", "KHR", "KMF", "KPW", "KRW", "KWD",
        "KYD", "KZT", "LAK", "LBP", "LKR", "LRD", "LSL", "LYD", "MAD", "MDL",
        "MGA", "MKD", "MMK", "MNT", "MOP", "MRO", "MUR", "MVR", "MWK", "MXN",
        "MXV", "MYR", "MZN", "NAD", "NGN", "NIO", "NOK", "NPR", "NZD", "OMR",
        "PAB", "PEN", "PGK", "PHP", "PKR", "PLN", "PYG", "QAR", "RON", "RSD",
        "RUB", "RWF", "SAR", "SBD", "SCR", "SDG", "SEK", "SGD", "SHP", "SLL",
        "SOS", "SRD", "SSP", "STD", "SYP", "SZL", "THB", "TJS", "TMT", "TND",
        "TOP", "TRY", "TTD", "TWD", "TZS", "UAH", "UGX", "USD", "USN", "USS",
        "UYI", "UYU", "UZS", "VEF", "VND", "VUV", "WST", "XAF", "XAG", "XAU",
        "XBA", "XBB", "XBC", "XBD", "XCD", "XDR", "XFU", "XOF", "XPD", "XPF",
        "XPT", "XSU", "XTS", "XUA", "XXX", "YER", "ZAR", "ZMW"
      ]
    },
    "encumbrance_amount": {
      "description": "The amount of the collateral that is encumbered by potential future commitments or legal liabilities. Represented as an integer number of cents/pence.",
      "type": "integer",
      "min": 0
    },
    "encumbrance_type": {
      "description": "The type of the encumbrance causing the encumbrance_amount.",
      "type": "string",
      "enum": ["repo", "covered_bond", "derivative", "real_estate", "none", "other"]
    },
    "end_date": {
      "description": "The end date for recognition of the collateral",
      "type": "string",
      "format": "date-time"
    },
    "sources": {
      "description": "Identifiers for data sources. Useful for analytics and MI purposes.",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "start_date": {
      "description": "The start date for recognition of the collateral",
      "type": "string",
      "format": "date-time"
    },
    "type": {
      "type": "string",
      "enum": ["residential_property", "commercial_property", "guarantee", "debenture", "life_policy", "shares", "debt_securities", "cash", "other"]
    },
    "value": {
      "description": "The valuation as used by the bank for the collateral",
      "type": "integer"
    },
    "value_date": {
      "description": "The timestamp that the collateral was valued. YYYY-MM-DDTHH:MM:SSZ in accordance with ISO 8601.",
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["id", "date", "value"],
  "additionalProperties": true
}
